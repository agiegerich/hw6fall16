= form_tag movies_add_tmdb_path, :method => :post do
  %table#movies
    %thead
      %tr
        %th{:class => @title_header} Title
        %th Rating
        %th{:class => @date_header} Release Date
        %th More Info
    %tbody
      - @movies.each do |movie|
        %tr
          %td= movie[:title]
          %td= movie[:rating]
          %td= movie[:release_date]
          %td= check_box_tag "tmdb_movies[#{movie[:tmdb_id]}]"

  %h4 Search for movie titles containing:
  = submit_tag 'Add Selected Movies'

= link_to 'Return to Movie List', movies_path
